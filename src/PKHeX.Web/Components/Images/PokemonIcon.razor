@using PKHeX.Core
@using PKHeX.Facade.Repositories

<Image Src="@ContentUrl()" Preview="false"></Image>

@code {
    [Parameter] public Species Species { get; set; }
    [Parameter] public FormDefinition? Form { get; set; }
    
    private string ContentUrl() => $"https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/versions/generation-viii/icons/{Species.Id()}{FormPostFix()}.png";

    private string FormPostFix() => Form switch
    {
        { IsAlolan: true } => "-alola",
        { IsGalarian: true } => "-galar",
        _ => string.Empty
    };

}